#!/usr/bin/expect    
set timeout 5    
set name [lindex $argv 0]
set hostno [lindex $argv 1]
spawn ssh $hostno -l $name  
expect "*password*"    
send "$name\r"    
spawn ssh $hostno -l root "ls >> /opt/xxoo.txt"    
expect "*password*"    
send "$name\r"    
spawn ssh root@$hostno "chmod 744 /opt/xxoo.txt"    
expect "*password*"    
send "$name\r"    
expect eof    

